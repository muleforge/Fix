<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core/2.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:vm="http://www.mulesoft.org/schema/mule/vm/2.2"
	xmlns:fix="http://www.mulesoft.org/schema/mule/fix/2.2"
	xsi:schemaLocation="
       http://www.mulesoft.org/schema/mule/core/2.2 http://www.mulesoft.org/schema/mule/core/2.2/mule.xsd
       http://www.mulesoft.org/schema/mule/fix/2.2 http://www.mulesoft.org/schema/mule/fix/2.2/mule-fix.xsd
       http://www.mulesoft.org/schema/mule/vm/2.2 http://www.mulesoft.org/schema/mule/vm/2.2/mule-vm.xsd">

	<vm:connector name="vmBanzaiConnector" queueEvents="true" />
	<fix:connector name="fixBanzaiConnector" config="./examples/src/test/resources/mock/banzai.cfg" />

	<fix:endpoint name="Banzai" connector-ref="fixBanzaiConnector"
		sessionID="FIX.4.1:BANZAI-EXEC" />
	<vm:endpoint name="in" path="in" connector-ref="vmBanzaiConnector" />
	<vm:endpoint name="out" path="out" connector-ref="vmBanzaiConnector" />

	<model name="fixBanzaiMock">

		<service name="inbound">
			<inbound>
				<vm:inbound-endpoint ref="in" />
			</inbound>
			<outbound>
				<pass-through-router>
					<fix:outbound-endpoint ref="Banzai" />
				</pass-through-router>
			</outbound>
		</service>

		<service name="outbound">
			<inbound>
				<fix:inbound-endpoint ref="Banzai" />
			</inbound>
			<outbound>
				<pass-through-router>
					<vm:outbound-endpoint ref="out" />
				</pass-through-router>
			</outbound>
		</service>
	</model>
</mule>